{% extends '::ojsbase.html.twig' %}
{% set hideleft = true %}
{% block title %}{{ "stats.doi.monthly"|trans }} {{ parent() }}{% endblock %}

{% block breadcrumb %}
    {% set list = [
    {'link': path('dashboard'), 'title': 'dashboard'|trans},
    {'link': path('ojs_admin_stats'), 'title': 'stats'|trans},
    { 'title': "stats.doi.monthly"|trans }
    ] %}
    {{ breadcrumb(list) }}
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style type="text/css">
        .btn {
            margin-bottom: 5px;
        }
        .btn-xs {
            margin-bottom: 0;
        }
    </style>
{% endblock %}

{% block body -%}
    <div class="panel">
        {% include '::flashbag.html.twig' %}
        <hr>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>#</th>
                    <th>{{ "title"|trans }}</th>
                    <th>{{ "actions"|trans }}</th>
                </tr>
            </thead>
            <tbody>
                {% for doi in results %}
                <tr>
                    <th scope="row">{{ doi.id }}</th>
                    <td><a href="http://dx.doi.org/{{ doi.doi }}">{{ doi.doi }}</a></td>
                    <td>{{ doi.time }}</td>
                    <td></td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
